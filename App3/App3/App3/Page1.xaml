<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="user" Text="{Binding user}"></Entry>
            <Entry Placeholder="Pass" IsPassword="True" Text="{Binding pass}"></Entry>
            <Button BackgroundColor="CornflowerBlue" TextColor="White"  Clicked="Button_Clicked" Command="{Binding LoginCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>